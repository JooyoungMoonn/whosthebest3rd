    <!--팀 생성-->
    <insert id="insertTeamInfo" parameterType="dc.human.whosthebest.vo.TeamInfoVO">
        <![CDATA[
            INSERT INTO TEAM (
            T_NAME,
            T_REGION,
            T_PHONE,
            T_MINAGE,
            T_MAXAGE,
            T_INFO,
            CREATED_ID
            ) VALUES (
            #{tName},
            #{tRegion},
            #{tPhone},
            #{tMinAge},
            #{tMaxAge},
            #{tInfo},
            #{createdID})
        ]]>
        <selectKey keyProperty="tID" resultType="int" order="AFTER">
            SELECT SEQ_TEAM.CURRVAL FROM dual
        </selectKey>
    </insert>

    <!--팀 가입하기(유저)-->
    <insert id="insertTeamMember" parameterType="dc.human.whosthebest.vo.TeamMemberVO">
        <![CDATA[
            INSERT INTO TEAM_MEMBER (
            T_ID,
            U_ID,
            CREATED_ID
            ) VALUES (
            #{tID},
            #{uID},
            #{createdID})
        ]]>

    </insert>

    <!--팀리스트 select-->
    <select id="selectTeamList" resultMap="teamInfoResult">
        <![CDATA[
        SELECT
            T.T_ID,
            T.T_NAME,
            T.T_REGION,
            CASE
                WHEN T.RANKSCORE IS NULL THEN 'unranked'
                WHEN R.MINSCORE IS NULL OR R.MAXSCORE IS NULL THEN 'unranked'
                ELSE R.RANK_NAME
            END AS RANKNAME,
            T.T_MINAGE,
            T.T_MAXAGE,
            T.T_MEMBER,
            T.T_MAXMEMBER,
            T.T_INFO,
            CASE
                WHEN TM.T_ID IS NOT NULL THEN 'true' ELSE 'false'
            END AS IS_JOINED
        FROM
            TEAM T
        LEFT JOIN
            RANK R ON T.RANKSCORE BETWEEN R.MINSCORE AND R.MAXSCORE
        LEFT JOIN
            TEAM_MEMBER TM ON T.T_ID = TM.T_ID
        ]]>
        <if test="userID != null and userID != ''">
        <![CDATA[
        AND
            TM.U_ID = #{userID}
        ]]>
        </if>
        ORDER BY T.CREATED_DATE DESC

    </select>

    <!-- 랭킹 select_허진욱-->
    <select id="selectRanking" resultMap="teamInfoResult">
        <![CDATA[
        SELECT
            T.T_ID,
            T.T_NAME,
            T.T_REGION,
            T.RANKSCORE,
            CASE
                WHEN T.RANKSCORE IS NULL THEN 'unranked'
                WHEN R.MINSCORE IS NULL OR R.MAXSCORE IS NULL THEN 'unranked'
                ELSE R.RANK_NAME
            END AS RANKNAME,
            T.T_MINAGE,
            T.T_MAXAGE,
            T.T_MEMBER,
            T.T_MAXMEMBER
        FROM
            TEAM T
        LEFT JOIN
            RANK R ON T.RANKSCORE BETWEEN R.MINSCORE AND R.MAXSCORE
        WHERE 1=1
        ]]>
        <if test="region != null and region != ''">
            AND  T.T_REGION = #{region}
        </if>
        <if test="search != null and search != ''">
            AND (
            T.T_NAME = #{search} OR
            T.T_REGION = #{search}
            )
            OR T.T_NAME ||T.T_REGION LIKE '%' || #{search} || '%'
        </if>
        <![CDATA[
        ORDER BY
        CASE
            WHEN T.RANKSCORE IS NULL THEN -1
            ELSE T.RANKSCORE
        END DESC,
        T.RANKSCORE DESC,
        T.CREATED_DATE ASC
        ]]>
    </select>

