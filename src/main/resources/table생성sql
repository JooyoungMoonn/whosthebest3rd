drop table squad;
CREATE TABLE squad (
    g_id NUMBER(10),
    t_id NUMBER(10),
    u_id VARCHAR2(12),
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20),
    PRIMARY KEY (g_id, u_id)
);

drop table g_result;
CREATE TABLE g_result (
    g_id NUMBER(10),
    t_homeid NUMBER(10),
    t_awayid NUMBER(10),
    home_goal NUMBER(2),
    away_goal NUMBER(2),
    u_id VARCHAR2(12),
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20),
    PRIMARY KEY (g_id, t_homeid)
);
