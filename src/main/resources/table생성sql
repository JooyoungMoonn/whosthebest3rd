CREATE TABLE STADIUM_RES_INFO (
    S_ID VARCHAR2(20 BYTE) NOT NULL,
    SRES_DATE VARCHAR2(30 BYTE),
    SRES_GAMETIME NUMBER(4,0),
    SRES_CREATED_ID VARCHAR2(20 BYTE),
    SRES_CREATED_DATE VARCHAR2(30 BYTE) DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'),
    SRES_UPDATED_ID VARCHAR2(20 BYTE),
    SRES_UPDATED_DATE VARCHAR2(30 BYTE) DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'),
    SRES_NUM NUMBER(4,0),
    PRIMARY KEY (S_ID)
);
drop table stadium_res_info;
CREATE TABLE stadium_res_info (
    s_id VARCHAR2(10) PRIMARY KEY,
    sRes_Date VARCHAR2(12),
    sRes_gameTime NUMBER(2),
    sRes_created_id VARCHAR2(12),
    sRes_created_date VARCHAR2(20),
    sRes_updated_id VARCHAR2(12),
    sRes_updated_date VARCHAR2(20)
);

ALTER TABLE stadium_res_info MODIFY (
    sRes_created_date DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'),
    sRes_updated_date DEFAULT TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS')
);

