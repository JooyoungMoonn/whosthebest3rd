CREATE TABLE users (
    u_id VARCHAR2(12) PRIMARY KEY,
    u_name VARCHAR2(20),
    u_bday VARCHAR2(8),
    u_addr1 VARCHAR2(200),
    u_addr2 VARCHAR2(200),
    u_email VARCHAR2(50),
    u_phone VARCHAR2(20),
    u_pw VARCHAR2(20),
    u_photo BLOB,
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20)
);



CREATE TABLE admin (
    a_id VARCHAR2(12) PRIMARY KEY,
    a_pw VARCHAR2(20),
    a_name VARCHAR2(20),
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20)
);

CREATE TABLE team (
    t_id NUMBER(10) PRIMARY KEY,
    t_name VARCHAR2(30),
    t_logo BLOB,
    t_region VARCHAR2(10),
    t_phone VARCHAR2(11),
    rankscore NUMBER(4),
    t_minage NUMBER(2),
    t_maxage NUMBER(2),
    t_maxmember NUMBER(2) DEFAULT 30,
    t_member NUMBER(2),
    t_info VARCHAR2(100),
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20)
);
drop table rank;
CREATE TABLE rank (
    rank_id NUMBER(1) PRIMARY KEY,
    rank_name VARCHAR2(10),
    minscore NUMBER(4),
    maxscore NUMBER(4),
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20)
);

CREATE TABLE board (
    b_id NUMBER(10) PRIMARY KEY,
    b_type NUMBER(1),
    b_bullet VARCHAR2(10),
    b_title VARCHAR2(50),
    b_content CLOB,
    created_id VARCHAR2(12),
    created_date VARCHAR2(20),
    updated_id VARCHAR2(12),
    updated_date VARCHAR2(20)
);

