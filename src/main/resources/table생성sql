CREATE TABLE g_comment (
    u_id VARCHAR2(12) NOT NULL,
    g_id VARCHAR2(10) NOT NULL,
    g_comment VARCHAR2(100),
    com_created_id VARCHAR2(12),
    com_created_date VARCHAR2(20),
    com_updated_id VARCHAR2(12),
    com_updated_date VARCHAR2(20),
    PRIMARY KEY (u_id, g_id)
);